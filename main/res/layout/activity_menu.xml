<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fundo1"
    android:padding="16dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogo da Velha"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        >
    </TextView>

    <Button
        android:id="@+id/botaoMaquina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogar Multiplayer Local"
        android:textColor="#FFFFFF"
        android:fontFamily="serif"
        android:textStyle="italic"
        android:background="#508F8D"/>

    <Button
        android:id="@+id/botaoMultiplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogar Contra o Computador"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        android:background="#508F8D"
        android:fontFamily="serif"
        />

</LinearLayout>